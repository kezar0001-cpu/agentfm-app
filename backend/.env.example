# Database
DATABASE_URL=postgresql://user:password@localhost:5432/agentfm

# Redis Cache Configuration
# Use REDIS_URL for standard Redis connection
REDIS_URL=redis://localhost:6379

# Alternative: Use REDIS_TLS_URL for secure Redis connections (e.g., Heroku Redis)
# REDIS_TLS_URL=rediss://user:password@host:port

# Alternative: Configure Redis with separate host/port
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Disable Redis caching entirely (useful for development/testing)
# REDIS_DISABLED=true

# JWT Secret
JWT_SECRET=your-secret-key-here

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000
